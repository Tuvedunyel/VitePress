{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "paths": {
      "#ts/*": ["./src/ts/*.ts"],
      "#components/*": ["./src/ts/components/*.ts"],
      "#sass/*": ["./src/sass/*.scss"],
      "#img/*": ["./src/img/*"]
    },
    "types": ["node"]
  },
  "include": ["src"]
}
